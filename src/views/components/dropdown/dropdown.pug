include ../../libs/bemto/bemto

include ../counter/counter
include ../button/button

mixin dropdown(label, title, items, accept, decline)
    +b.dropdown
        +e.label.h3=label
        +e.select
            +e.SPAN.body.body=title
            +e.expand
        +e.options
            each item in items
                +e.option
                    +e.option-name=item
                    +counter()
            if accept || decline
                +e.actions
                    if accept
                        +button('Применить', false, 'default')
                    if decline
                        +e.decline
                            +button('Очистить', false, 'default', 'gray')

mixin datepicker(label)
    +b.date-picker
        +e.expand
        +e.label.h3=label
        +b.INPUT.datepicker-here.date-picker(placeholder='ДД.ММ.ГГГГ')

mixin range-datepicker(labelA, labelB)
    +b.range-date-picker
        +datepicker(labelA)
        +datepicker(labelB)